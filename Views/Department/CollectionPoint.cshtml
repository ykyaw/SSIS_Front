<div class="container" style="margin-top: 20px;">
    <form id="collectionpoint">

        <h2 class="titlecenter">Select Collection Point</h2>
        @foreach (var c in collectionPoints)
        {
            <div class="row justify-content-center" style="margin-top: 20px;">
                <div class="col-0">
                    <input name="cp" type="radio" data-loc="@c.Location" data-time="@c.CollectionTime" value="@c.Id" />
                </div>
                <div class="col-3">
                    <label> @c.Location @c.CollectionTime</label>
                </div>



            </div>
        }
    </form>

    <div class="row justify-content-center" style="margin-top: 20px;">
        <div class="col-2">
            <button id="change" type="button" class="btn btn-success form-control font-weight-bold">Change</button>
        </div>
    </div>
    
</div>

<script src="~/js/CollectionPoint.js"></script>
