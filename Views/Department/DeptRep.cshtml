@{
    ViewData["Title"] = "Delegate Authority";
    List<Employee> employees = (List<Employee>)ViewData["employees"];
    Employee deptrep = (Employee)ViewData["deptrep"];
}

<div class="container" style="margin-top: 20px">
    <h5>Assigned Department Representative: <span id="rep">@deptrep.Name</span></h5>
</div>

<div class="container" style="margin-top: 20px">
    <h2 class="titlecenter">Employee List</h2>
    <form id="employee">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Employee Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in employees)
                {
                    <tr>
                        <td>
                            <input name="emp" type="radio" value="@e.Id" />
                            <label>@e.Name</label>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

<div class="row justify-content-center" style="margin-top: 20px;">
    <div class="col-0">
        <button id="assign" class="btn btn-success font-weight-bold">Assign as Dept Representative</button>
    </div>
</div>

<script src="~/js/DeptRep.js"></script>
