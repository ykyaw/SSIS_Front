
@{
    ViewData["Title"] = "Disbursement List";
    List<RequisitionDetail> requisitions = (List<RequisitionDetail>)ViewData["requisition"];
}

    <h1>Disbursement List</h1>

<div>
    <span>Disbursement Date: </span>
    @*<span>@SSIS_FRONT.Utils.TimeUtil.convertTimestampToyyyyMMdd(requisitions[0].Requisition.CollectionDate)</span>*@
    <input id="requisitionid" value="" @requisitions[0].RequisitionId type="hidden" />
</div>



<table class="table table-striped">
    <thead>
        <tr>
            <th>Item Description</th>
            <th>Qty Requisited</th>
            <th>Qty Disbursed</th>
            <th>Remarks</th>
            <th>Qty Received</th>
            <th>Dept Remarks</th>
            <th>Clerk Remarks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in requisitions)
        {
            <tr>
                <input class="detailid" type="hidden" value=@d.Id" "  />
                <td>@d.Product.Description</td>
                <td>@d.QtyNeeded</td>
                <td>@d.QtyDisbursed</td>
                <td>@d.DisburseRemark</td>
                <td>@d.QtyReceived</td>
                <td>@d.RepRemark</td>
                <td><input type="text" /></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button id="acknowledge" type="button" class="btn btn-primary">Acknowledge Item Received</button>
</div>

<table>
    <tr>
        <td>Received by (Rep)</td>
        <td></td>
        <td>@SSIS_FRONT.Utils.TimeUtil.convertTimestampToyyyyMMdd(requisitions[0].Requisition.ReceivedDate)</td>
    </tr>
    <tr>
        <td>Acknowledged by (Clerk)</td>
        <td id="clerk"></td>
        <td id="date"></td>
    </tr>
</table>
