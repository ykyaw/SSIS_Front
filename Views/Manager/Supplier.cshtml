
@{
    ViewData["Title"] = "Supplier";
    List<Product> items = (List<Product>)ViewData["Items"];
}

<h2 class="titlecenter">Supplier</h2>

<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-1">
            <label class="form-control font-weight-bold" style="border: 0;">Item:</label>
        </div>
        <div class="col-md-5">
            <select id="select" class="form-control">
                @foreach (Product item in items)
                {
                    <option value="@item.Id" des="@item.Description">@(item.Description+"("+@item.Id+")")</option>
                }
            </select>
        </div>
        <div class="col-md-1">
            <button type="button" id="retrieve" class="btn btn-primary font-weight-bold">Retrieve</button>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 20px;">
    <table class="table table-striped">
        <tr id="th">
            <th>Item Code</th>
            <th>Description</th>
            <th>1st Supplier</th>
            <th>2nd Supplier</th>
            <th>3rd Supplier</th>
        </tr>
    </table>
</div>

<div class="container" style="margin-top: 20px;">
    <div style="display:none" class="rank">
        <div class="row justify-content-center">
            <div class="col-2">
                <label class="form-control font-weight-bold" style="border: 0;">1st Supplier:</label>

            </div>
            <div class="col-4">
                <select id="1st" class="rankSelect form-control"></select>
            </div>
        </div>
        <div class="row justify-content-center" style="margin-top: 10px;">
            <div class="col-2">
                <label class="form-control font-weight-bold" style="border: 0;">2nd Supplier:</label>

            </div>
            <div class="col-4">
                <select id="2nd" class="rankSelect form-control"></select>
            </div>
        </div>
        <div class="row justify-content-center" style="margin-top: 10px;">
            <div class="col-2">
                <label class="form-control font-weight-bold" style="border: 0;">3rd Supplier:</label>

            </div>
            <div class="col-4">
                <select id="3rd" class="rankSelect form-control"></select>
            </div>
        </div>
        <div class="row justify-content-center" style="margin-top: 20px;">
            <div class="col-1">
                <button type="button" id="save" class="btn btn-primary font-weight-bold">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Supplier.js"></script>
