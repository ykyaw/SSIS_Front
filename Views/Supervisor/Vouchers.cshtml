@using SSIS_FRONT.Utils;

@{
    ViewData["Title"] = "Adjustment Voucher List";
    List<AdjustmentVoucher> vouchers = (List<AdjustmentVoucher>)ViewData["Vouchers"];
}

<h2 class="titlecenter">@ViewData["Title"]</h2>

<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-1">
            <label class="form-control font-weight-bold" style="border: 0;">Search:</label>
        </div>
        <div class="col-md-5">
            <input type="text" id="search" class="form-control" placeholder="Type here" />
        </div>
    </div>
</div>

<div class="container" style="margin-top: 20px;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Voucher#</th>
                <th>Date Issued</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (AdjustmentVoucher voucher in vouchers)
            {
                <tr class="search">
                    <td>@voucher.Id</td>
                    <td>@TimeUtil.convertTimestampToyyyyMMdd(voucher.InitiatedDate)</td>
                    <td>@voucher.Status</td>
                    <td><a href="/Voucher/@voucher.Id" class="btn btn-info">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/Search.js"></script>
