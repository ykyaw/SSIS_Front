@{
    ViewData["Title"] = "Disbursement List";
    List<RequisitionDetail> disbursementList = (List<RequisitionDetail>)ViewData["disbursementList"];
    string name = (string)ViewData["Name"];
}

<h1>@ViewData["Title"]</h1>

<div>
    <span>Disbursement Date: </span>
    <span>@SSIS_FRONT.Utils.TimeUtil.convertTimestampToyyyyMMdd(disbursementList[0].Requisition.CollectionDate)</span>
    <input id="requisitionid" value="" @disbursementList[0].RequisitionId type="hidden" />
</div>



<table class="table table-striped">
    <thead>
        <tr>
            <th>Item Description</th>
            <th>Qty Requisited</th>
            <th>Qty Disbursed</th>
            <th>Remarks</th>
            <th>Qty Received</th>
            <th>Dept Remarks</th>
            <th>Clerk Remarks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in disbursementList)
        {
        <tr>
            <input class="detailid" type="hidden" value=@d.Id" "    />
            <td>@d.Product.Description</td>
            <td>@d.QtyNeeded</td>
            <td>@d.QtyDisbursed</td>
            <td>@d.DisburseRemark</td>
            <td>@d.QtyReceived</td>
            <td>@d.RepRemark</td>
            @if (disbursementList[0].Requisition.Status != "Received")
            {
                <td><input type="text" /></td>
            }
        </tr>
        }
    </tbody>
</table>

<div>
    <button id="acknowledge" type="button" class="btn btn-primary">Acknowledge Disbursement Received by Dept Rep</button>
</div>

<table>
    <tr>
        <td>Received by (Rep)</td>
        @if (disbursementList[0].Requisition.Status != "Received" || disbursementList[0].Requisition.Status != "Completed")
        {
            <td>@disbursementList[0].Requisition.ReceivedByRep.Name</td>
            <td>@SSIS_FRONT.Utils.TimeUtil.convertTimestampToyyyyMMdd(disbursementList[0].Requisition.ReceivedDate)</td>
        }
    </tr>
    <tr>
        <td>Acknowledged by (Clerk)</td>
        <td id="clerk"></td>
        <input id="clerkname" value="@name" type="hidden" />
        <td id="date"></td>
    </tr>
</table>

<script src="~/js/DisbursementDetail.js"></script>