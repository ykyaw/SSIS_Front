
@{
    ViewData["Title"] = "AdjustmentVoucherDetails";
    List<AdjustmentVoucherDetail> adjustmentVoucherDetailsToHTML = (List<AdjustmentVoucherDetail>)ViewData["adjustmentVoucherDetailsToHTML"];
    AdjustmentVoucher av = (AdjustmentVoucher)ViewData["av"];
    int clerkid = (int)ViewData["clerkid"];
    List<Product> products = (List<Product>)ViewData["products"];
}

<h1>Adjustment Voucher Details</h1>


<h6 id="voucherId" value="@av.Id">Voucher# : @av.Id</h6>
<h6>Date Issued: "@SSIS_FRONT.Utils.TimeUtil.convertTimestampToyyyyMMdd(av.InitiatedDate)"</h6>
<h6>Status: @av.Status.ToUpper()</h6>
<input type="hidden" value="@clerkid" />

@if (av.Status == "Rejected")
{
    <h6>Reject Reason:@av.Reason</h6>
}

@if (av.ApprovedMgrId != null)
{
    <h6>By:@av.ApprovedMgr.Name </h6>
}
else if (av.ApprovedSup != null)
{
    <h6>By:@av.ApprovedSup.Name </h6>
}
else
{
    <h6></h6>
}

@*selection row*@
@if (av.Status == "Created" && av.InitiatedClerkId == clerkid)
{
    <div>
        <label> Item</label>
        <select id="product">
            <option value="0">Choose Item</option>
            @foreach (var p in products)
            {
                <option type="text" value="@(@p.Id+"/"+@p.Description+"/"+@p.Uom)">@p.Description</option>

            }
        </select>
        <label>QTY</label>
        <input type="number" id="qtyAdjusted" value="0" />
        <label>reason</label>
        <input required type="text" id="reason" />
        <button id="generate" class="btn btn-primary">Generate</button>
    </div>



    <table>
        <thead>
            <tr>
                <th>Item Code</th>
                <th>Description</th>
                <th>Quantity Adjusted</th>
                <th>Unit Of Measurement</th>
                <th>Reason</th>
                <th>Price</th>
                <th>Total Price</th>
                @if (adjustmentVoucherDetailsToHTML.Count() > 0)
                {
                    <th></th>
                }
            </tr>
        </thead>

        <tbody id="avdetails">
            @if (adjustmentVoucherDetailsToHTML.Count() > 0)
                @foreach (AdjustmentVoucherDetail advdet in adjustmentVoucherDetailsToHTML)
                {
                    <tr>
                        <input type="hidden" id="detailId" value="@advdet" />
                        <td class="productId">@advdet.ProductId</td>
                        <td class="description">@advdet.Product.Description</td>
                        <td class="quantity">@advdet.QtyAdjusted</td>
                        <td class="uom">@advdet.Product.Uom</td>
                        <td class="reason">@advdet.Reason</td>
                        <td class="price">@advdet.Unitprice.ToString("C")</td>
                        <td class="totalprice">@advdet.TotalPrice.ToString("C")</td>
                        @*if button amend is clicked*@
                        <td class="amend" id="remove"><input type="button" value="Remove" /> </td>
                    </tr>
                }
        </tbody>
    </table>

    @if (adjustmentVoucherDetailsToHTML.Count() == 0)
    {
        <div class="disappear">
            <p> There is no voucher detail saved in this voucher</p>
        </div>
    }

    <div>
        <button class="btn btn-primary" type="button" id="save"> Save</button>
        <button class="btn btn-primary" type="button" id="submit">Submit</button>
    </div>


}



else
{

    <table>
        <thead>
            <tr>
                <th>Item Code</th>
                <th>Description</th>
                <th>Quantity Adjusted</th>
                <th>Unit Of Measurement</th>
                <th>Reason</th>
                <th>Price</th>
                <th>Total Price</th>
                @if (adjustmentVoucherDetailsToHTML.Count() > 0)
                {
                    <th></th>
                }
            </tr>
        </thead>

        <tbody id="avdetails">
            @if (adjustmentVoucherDetailsToHTML.Count() > 0)
                @foreach (AdjustmentVoucherDetail advdet in adjustmentVoucherDetailsToHTML)
                {
                    <tr>
                        <input type="hidden" id="detailId" value="@advdet" />
                        <td class="productId">@advdet.ProductId</td>
                        <td class="description">@advdet.Product.Description</td>
                        <td class="quantity">@advdet.QtyAdjusted</td>
                        <td class="uom">@advdet.Product.Uom</td>
                        <td class="reason">@advdet.Reason</td>
                        <td class="price">@advdet.Unitprice.ToString("C")</td>
                        <td class="totalprice">@advdet.TotalPrice.ToString("C")</td>
                        @*if button amend is clicked*@
                        <td class="amend" id="remove"><input type="button" value="Remove" /> </td>
                    </tr>

                }
            
        </tbody>

    </table>

    @if (adjustmentVoucherDetailsToHTML.Count() == 0)
    {
        <div >
            <p> There is no voucher detail saved in this voucher</p>
        </div>
    }

}


<div>
    <a class="btn btn-primary" asp-controller="StoreClerk" asp-action="AdjustmentVoucher"> View All Voucher List</a>
    <a class="btn btn-primary" asp-controller="StoreClerk" asp-action="AdjustmentVoucherByClerkId">View My Voucher History</a>
</div>


<script src="~/js/AdjustmentVoucher.js"></script>

