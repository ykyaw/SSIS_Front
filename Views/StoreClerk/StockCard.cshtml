@{
    ViewData["Title"] = "Stock Card";
    List<Transaction> transactions = (List<Transaction>)ViewData["transactions"];
    List<TenderQuotation> tenderQuotations = (List<TenderQuotation>)ViewData["tenderquotations"];
}
<h1>@ViewData["Title"]</h1>

<table>
    <tr>
        <td>Item Code</td>
        <td>@transactions[0].ProductId</td>
    </tr>
    <tr>
        <td>Item Description</td>
        <td>@transactions[0].Product.Description</td>
    </tr>
    <tr>
        <td>Bin#</td>
        <td>@transactions[0].Product.CategoryId</td>
    </tr>
    <tr>
        <td>UOM</td>
        <td>@transactions[0].Product.Uom</td>
    </tr>
    <tr>
        <td>1st Supplier</td>
        <td>@tenderQuotations[0].Supplier.Name</td>
    </tr>
    <tr>
        <td>2nd Supplier</td>
        <td>@tenderQuotations[1].Supplier.Name</td>
    </tr>
    <tr>
        <td>3rd Supplier</td>
        <td>@tenderQuotations[2].Supplier.Name</td>
    </tr>
</table>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Balance</th>
            <th>Entered by</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in transactions)
        {
            <tr>
                <td>@SSIS_FRONT.Utils.TimeUtil.convertTimestampToyyyyMMdd(t.Date)</td>
                <td>@t.Description</td>
                <td>@t.Qty</td>
                <td>@t.Balance</td>
                <td>@t.UpdatedByEmp.Name</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <span>Add Entry:</span>
    <input type="text" class="description" />
    <input type="number" class="actualNumber" value="0" />
    <button id="add" class="btn btn-primary">Save</button>
</div>
