
@{
    ViewData["Title"] = "GenerateAdjustmentVoucher";
    List<Product> products = (List<Product>)ViewData["products"];
    AdjustmentVoucher newAV = (AdjustmentVoucher)ViewData["Newav"];
    // Dictionary<Product, double> tenderprice = (Dictionary<Product, double>)ViewData["tenderprice"];

}

<h1>Generate Adjustment Voucher</h1>

<h6 id="voucherId" value="@newAV.Id">Voucher# : @newAV.Id</h6>
<h6>Date Issued: @SSIS_FRONT.Utils.TimeUtil.convertTimestampToyyyyMMdd(newAV.InitiatedDate)</h6>


<div>
    <label> Item</label>
    <select id="product">
        <option value="0">Choose Item</option>
        @foreach (var p in products)
        {
            <option type="text" value="@(@p.Id+"/"+@p.Description)">@p.Description</option>

        }
    </select>
    <label>QTY</label>
    <input type="number" id="qtyAdjusted" value="0" />
    <label>reason</label>
    <input required type="text" id="reason" />

    <button id="generate" class="btn btn-primary">Generate</button>

</div>


<div>
    <table>
        <thead>
            <tr>
                <th>Item Code</th>
                <th>Description</th>
                <th>Quantity Adjusted</th>
                <th>Reason</th>
                <th>Price</th>
                <th>Total Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="avdetails">
        </tbody>
    </table>
</div>
<div>
    <button class="btn btn-primary" type="button" id="save">Save</button>
    <button class="btn btn-primary" type="button" id="submit">Submit</button>
</div>
<div>
    <a class="btn btn-primary" asp-controller="StoreClerk" asp-action="AdjustmentVoucher"> Back to Adjustment List</a>
</div>

<script src="~/js/AdjustmentVoucher.js"></script>
