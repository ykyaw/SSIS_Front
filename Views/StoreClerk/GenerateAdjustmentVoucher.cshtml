@using SSIS_FRONT.Utils; 

@{
    ViewData["Title"] = "Generate Adjustment Voucher";
    List<Product> products = (List<Product>)ViewData["products"];
    AdjustmentVoucher newAV = (AdjustmentVoucher)ViewData["Newav"];
    // Dictionary<Product, double> tenderprice = (Dictionary<Product, double>)ViewData["tenderprice"];

}

<h1>@ViewData["Title"]</h1>

<h6 id="voucherId" value="@newAV.Id">Voucher# : @newAV.Id</h6>
<h6>Date Issued: @TimeUtil.convertTimestampToyyyyMMdd(newAV.InitiatedDate)</h6>

<div>
    <label> Item</label>
    <select id="product">
        <option value="0">Choose Item</option>
        @foreach (var p in products)
        {
            <option type="text" data-uom="@p.Uom" data-desc="@p.Description" value="@p.Id">[@p.Id] @p.Description</option>
        }
    </select>
    <label>QTY</label>
    <input type="number" id="qtyAdjusted" value="0" />
    <label>Reason</label>
    <input type="text" id="reason" />
    <button id="generate" class="btn btn-primary">Generate</button>
</div>

<div>
    <table>
        <thead>
            <tr>
                <th>Item Code</th>
                <th>Description</th>
                <th>Quantity Adjusted</th>
                <th>Unit Of Measurement</th>
                <th>Reason</th>
                <th>Price</th>
                <th>Total Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="avdetails">
        </tbody>
    </table>
</div>
<div>
    <button class="btn btn-primary" type="button" id="save">Save</button>
    <button class="btn btn-success" type="button" id="submit">Submit</button>
</div>
<div>
    <a class="btn btn-primary" asp-controller="StoreClerk" asp-action="AdjustmentVoucher">Back to Adjustment Voucher List</a>
</div>

<script src="~/js/AdjustmentVoucherDetail.js"></script>
