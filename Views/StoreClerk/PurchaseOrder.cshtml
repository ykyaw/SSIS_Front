@{
    ViewData["Title"] = "Purchase Orders";
    List<PurchaseOrder> purchaseOrders = (List<PurchaseOrder>)ViewData["purchaseOrders"];
}

<h2 class="titlecenter">@ViewData["Title"]</h2>

<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-1">
            <label class="form-control font-weight-bold" style="border: 0;">Search:</label>
        </div>
        <div class="col-md-5">
            <input type="text" id="search" class="form-control" placeholder="Type here" />
        </div>
    </div>
</div>

@*<div class="input-group">
    <span class="input-group-addon">Search</span>
    <input type="text" id="search" class="form-control" placeholder="Type here" />
</div>*@

<div class="container" style="margin-top: 20px;">
    <table id="form" class="table table-striped">
        <thead>
            <tr>
                <th>PO Number</th>
                <th>Order Date</th>
                <th>Supplier</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var po in purchaseOrders)
            {
                <tr class="search">
                    <td>@po.Id</td>
                    <td>@SSIS_FRONT.Utils.TimeUtil.convertTimestampToyyyyMMdd(po.OrderedDate)</td>
                    <td>@po.Supplier.Name</td>
                    <td>@po.Status</td>
                    <td><a class="btn btn-info" asp-controller="StoreClerk" asp-action="PurchaseOrder" asp-route-id="@po.Id">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

