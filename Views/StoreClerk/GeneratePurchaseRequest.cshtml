@{
    ViewData["Title"] = "Generate Purchase Request";
    List<Product> products = (List<Product>)ViewData["products"];
}


<h2 class="titlecenter">@ViewData["Title"]</h2>

<div class="container" style="margin-top:20px">
    <table class="table" id="productlist">
        <tr id="template" style="display:none">
            <td>Item: </td>
            <td>
                <select class="product form-control">
                    <option value="0">Choose Item</option>
                    @foreach (var p in products)
                    {
                        <option value="@p.Id">[@p.Id] @p.Description</option>
                    }
                </select>
            </td>
            <td>
                <input type="button" class="btn btn-danger" value="Remove" />
            </td>
        </tr>
        @for (int i = 0; i < 5; i++)
        {
            <tr>
                <td>Item: </td>
                <td>
                    <select class="product form-control">
                        <option value="0">Choose Item</option>
                        @foreach (var p in products)
                        {
                            <option value="@p.Id">[@p.Id] @p.Description</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" class="btn btn-danger" value="Remove" />
                </td>
            </tr>
        }
    </table>
</div>

