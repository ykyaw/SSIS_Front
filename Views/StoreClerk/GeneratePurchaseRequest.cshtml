@{
    ViewData["Title"] = "Generate Purchase Request";
    List<Product> products = (List<Product>)ViewData["products"];
}

<h1>@ViewData["Title"]</h1>

<table id="productlist">
    <tr id="template" style="display:none">
        <td>Item</td>
        <td>
            <select class="product">
                <option value="0">Choose Item</option>
                @foreach (var p in products)
                {
                    <option value="@p.Id">[@p.Id] @p.Description</option>
                }
            </select>
        </td>
        <td>
            <input type="button" value="Remove" />
        </td>
    </tr>
    @for (int i = 0; i < 5; i++)
    {
        <tr>
            <td>Item</td>
            <td>
                <select class="product">
                    <option value="0">Choose Item</option>
                    @foreach (var p in products)
                    {
                        <option value="@p.Id">[@p.Id] @p.Description</option>
                    }
                </select>
            </td>
            <td>
                <input type="button" value="Remove" />
            </td>
        </tr>
    }
</table>

<div>
    <button id="add" class="btn btn-primary">Add More Item</button>
    <button id="generate" class="btn btn-primary">Generate</button>
</div>

<script src="~/js/GeneratePurchaseRequest.js"></script>