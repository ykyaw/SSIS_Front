<h2 class="titlecenter">@ViewData["Title"]</h2>

<table id="form" class="table table-striped">
    <thead>
        <tr>
            <th>Form ID</th>
            <th>Requested Date</th>
            <th>Department</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in requisitions)
        {
            <tr class="search">
                <td>@r.Id</td>
                <td>@SSIS_FRONT.Utils.TimeUtil.convertTimestampToyyyyMMdd(r.CreatedDate)</td>
                <td class="select">@r.Department.Name</td>
                <td>@r.Status</td>
                <td><a class="btn btn-info" asp-controller="StoreClerk" asp-action="Requisition" asp-route-id="@r.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/Search.js"></script>